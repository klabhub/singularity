# Install conda in batch mode to ~/conda
bash miniconda3.sh -bp ~/conda

# Set up conda shell scripts on login (* see CONDA ACTIVATION note below)
echo ". ~/conda/etc/profile.d/conda.sh" >> ~/.bashrc
